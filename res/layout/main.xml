<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <Button android:text="@string/button_select" android:id="@+id/button1" android:layout_width="fill_parent" android:layout_height="wrap_content"></Button>
    <TextView android:layout_height="wrap_content" android:id="@+id/textView2" android:textAppearance="?android:attr/textAppearanceLarge" android:text="0 %" android:layout_width="fill_parent" android:layout_gravity="top" android:textStyle="bold"></TextView>
    <SeekBar android:layout_height="wrap_content" android:id="@+id/seekBar1" android:layout_width="fill_parent"></SeekBar>
    <Button android:id="@+id/button2" android:layout_width="wrap_content" android:text="UP" android:layout_height="wrap_content"></Button>
    <Button android:text="DOWN" android:id="@+id/button3" android:layout_height="wrap_content" android:layout_width="wrap_content"></Button>
    <Button android:id="@+id/button4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Mute"></Button>
    <ListView android:layout_height="fill_parent" android:id="@+id/listView1" android:layout_width="fill_parent"></ListView>
</LinearLayout>
